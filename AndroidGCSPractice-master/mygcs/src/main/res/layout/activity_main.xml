<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-187dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONNECT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#80000000"
        android:id="@+id/infoLayout">

        <TextView
            android:id="@+id/TextViewVoltage"
            android:layout_width="123dp"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="TextViewVoltage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewFlyingType"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:gravity="right"
            android:text="TextViewFlyingType"
            app:layout_constraintStart_toEndOf="@+id/TextViewVoltage"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/modeSelect"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            app:layout_constraintStart_toEndOf="@+id/TextViewFlyingType"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewAltitude"
            android:layout_width="123dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="TextViewAltitude"
            app:layout_constraintStart_toEndOf="@+id/modeSelect"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewSpeed"
            android:layout_width="123dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="TextViewSpeed"
            app:layout_constraintStart_toEndOf="@+id/TextViewAltitude"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewYaw"
            android:layout_width="123dp"
            android:layout_height="25dp"
            android:gravity="left"
            android:text="TextViewYaw"
            app:layout_constraintStart_toEndOf="@+id/TextViewSpeed"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewGps"
            android:layout_width="123dp"
            android:layout_height="25dp"
            android:gravity="left"
            android:text="TextViewGps"
            app:layout_constraintStart_toEndOf="@+id/TextViewYaw"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoLayout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="275dp"
            android:layout_height="120dp" />

    </LinearLayout>


    <Button
        android:id="@+id/DroneStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WAIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/map" />

    <Button
        android:id="@+id/blueToothButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Bluetooth"
        app:layout_constraintBottom_toTopOf="@+id/connectButton"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/cadastralMapButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:text="지적도"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/clearAllButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@+id/blueToothButton"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/landAltitudeLayout"
        android:layout_width="60dp"
        android:layout_height="180dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/infoLayout">

        <Button
            android:id="@+id/landAltitudeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="이륙고도" />

        <Button
            android:id="@+id/AltitudePlusButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+0.5"
            android:visibility="invisible" />

        <Button
            android:id="@+id/AltitudeSubtractButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="-0.5"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapLayout"
        android:layout_width="90dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/connectButton">

        <Button
            android:id="@+id/satelliteMapButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="위성지도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/terrainMapButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="지형도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/basicMapButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="일반지도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="지도유형"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mapLayout">

        <Button
            android:id="@+id/mapMoveButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="맵 이동"
            android:visibility="invisible" />

        <Button
            android:id="@+id/mapLockButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="맵 잠금"
            android:visibility="invisible" />

        <Button
            android:id="@+id/mapStateButton"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="맵 상태" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="60dp"
        android:layout_height="240dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/map"
        app:layout_constraintTop_toBottomOf="@+id/infoLayout">

        <Button
            android:id="@+id/missionButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="임무" />

        <Button
            android:id="@+id/lineABButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="AB"
            android:visibility="invisible" />

        <Button
            android:id="@+id/polygoneButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="다각형"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cancelbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="취소"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="60dp"
        android:layout_height="180dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/landAltitudeLayout"
        app:layout_constraintTop_toBottomOf="@+id/infoLayout">

        <Button
            android:id="@+id/flightWidthbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="비행폭" />

        <Button
            android:id="@+id/widthIncreasebutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+0.5"
            android:visibility="invisible" />

        <Button
            android:id="@+id/widthDecreasebutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-0.5"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="180dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/infoLayout">

        <Button
            android:id="@+id/ABdistancebutton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="AB거리" />

        <Button
            android:id="@+id/distanceIncresebutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+10"
            android:visibility="invisible" />

        <Button
            android:id="@+id/distanceDecreasebutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="-10"
            android:visibility="invisible" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>